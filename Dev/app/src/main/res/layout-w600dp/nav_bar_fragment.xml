<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/BottomNavBar"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="#3345E8"
    tools:context=".NavBar">

    <LinearLayout
        android:id="@+id/sideAppBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/homeIcon"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_weight="1"
            android:src="@drawable/ic_house" />

        <ImageView
            android:id="@+id/mountainsIcon"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="auto"
            android:src="@drawable/ic_mountains" />

        <ImageView
            android:id="@+id/pencilIcon"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@drawable/ic_pencil" />

        <ImageView
            android:id="@+id/cloudsIcon"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="auto"
            android:onClick="onClick"
            android:src="@drawable/ic_cloud_sun" />

        <ImageView
            android:id="@+id/weightsIcon"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:clickable="true"
            android:onClick="onClick"
            android:src="@drawable/ic_barbell" />

    </LinearLayout>

</FrameLayout>